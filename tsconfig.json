{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "removeComments": true
    }
}
